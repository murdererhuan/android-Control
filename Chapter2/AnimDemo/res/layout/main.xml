              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <Button
            android:id="@+id/camera_stretch_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="镜头由远至近效果"/>

    <Button
            android:id="@+id/loading_demo_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="加载框效果"/>

    <Button
            android:id="@+id/scanner_demo_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="扫描效果"/>
</LinearLayout>

